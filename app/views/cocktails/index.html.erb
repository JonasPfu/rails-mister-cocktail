
<%= render 'shared/banner' %>

<div class="container my-4">
  <div class="cards my-3">
    <h3>Your cocktail collection</h3>
  </div>

  <div class="cards my-4">
    <%= link_to new_cocktail_path do %>
      <div class="card-category" style="color: rgb(180, 180, 180); background: rgb(90, 90, 90);">
        <i class="fas fa-plus"></i>
      </div>
    <% end %>

    <% @cocktails.each do |cocktail| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= @url_cocktail.sample %>')">
        <p><%= link_to cocktail.name, cocktail_path(cocktail) %></p>
        <div>
          <%= link_to cocktail_path(cocktail), method: :delete, data: { confirm: 'Are you sure you want to delete this cocktail?' }, class: 'card-remove-link' do %>
            <i class="fas fa-trash"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
