<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= @url_cocktail.sample %>');">
  <div class="container text-center">
    <h1><%= @cocktail.name %></h1>
    <p>Here are your mixing secrets for this drink</p>
  </div>
</div>

<div class="container my-4">
  <div class="row">
    <div class="col">
      <h3>Cocktail ingredients</h3>

      <% @cocktail.doses.each do |dose| %>
        <div class="row">
          <div class="card-product w-100 m-2">
            <div class="card-product-infos w-100 d-flex justify-content-between">
              <div>
                <h2><%= dose.ingredient.name %></h2>
                <p><%= dose.description %></p>
              </div>
              <div>
                <%= link_to dose_path(dose), method: :delete, data: { confirm: 'Are you sure you want to delete this dose?' }, style: 'color: grey' do %>
                  <i class="fas fa-trash"></i>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="col">
      <h3>Add a new dose</h3>

      <%= simple_form_for([@cocktail, @dose]) do |f| %>
        <%= f.association :ingredient, as: :select %>
        <%= f.input :description %>
        <%= f.submit 'Save your dose', class: 'btn btn-secondary' %>
      <% end %>
    </div>
  </div>
</div>
